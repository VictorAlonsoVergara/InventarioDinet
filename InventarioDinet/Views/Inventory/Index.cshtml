@model IEnumerable<InventarioDinet.Models.Inventory>

@{
    ViewBag.Title = "Indice";
}

<h2>Listado de Inventario</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", "", new { @class = "btn btn-success" })
</p>
<div class="table-container" style="width: 2000px; overflow-x: auto;">
    <table class="table" style="table-layout: fixed;">
        <tr>
            <th style="width: 30%;">
                @Html.DisplayNameFor(model => model.COD_CIA)
            </th>
            <th style="width: 30%;">
                @Html.DisplayNameFor(model => model.COMPANIA_VENTA_3)
            </th>
            <th style="width: 30%;">
                @Html.DisplayNameFor(model => model.ALMACEN_VENTA)
            </th>
            <th style="width: 30%;">
                @Html.DisplayNameFor(model => model.TIPO_MOVIMIENTO)
            </th>
            <th style="width: 30%;">
                @Html.DisplayNameFor(model => model.TIPO_DOCUMENTO)
            </th>
            <th style="width: 30%;">
                @Html.DisplayNameFor(model => model.NRO_DOCUMENTO)
            </th>
            <th style="width: 30%;">
                @Html.DisplayNameFor(model => model.COD_ITEM_2)
            </th>
            <th style="width: 30%;">
                @Html.DisplayNameFor(model => model.PROVEEDOR)
            </th>
            <th style="width: 30%;">
                @Html.DisplayNameFor(model => model.ALMACEN_DESTINO)
            </th>
            <th style="width: 30%;">
                @Html.DisplayNameFor(model => model.CANTIDAD)
            </th>
            <th style="width: 40%;">
                @Html.DisplayNameFor(model => model.DOC_REF_1)
            </th>
            <th style="width: 40%;">
                @Html.DisplayNameFor(model => model.DOC_REF_2)
            </th>
            <th style="width: 40%;">
                @Html.DisplayNameFor(model => model.DOC_REF_3)
            </th>
            <th style="width: 40%;">
                @Html.DisplayNameFor(model => model.DOC_REF_4)
            </th>
            <th style="width: 40%;">
                @Html.DisplayNameFor(model => model.DOC_REF_5)
            </th>
            <th style="width: 30%;">
                @Html.DisplayNameFor(model => model.FECHA_TRANSACCION)
            </th>
            <th style="width: 100%;">Acciones</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.COD_CIA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.COMPANIA_VENTA_3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ALMACEN_VENTA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TIPO_MOVIMIENTO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TIPO_DOCUMENTO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NRO_DOCUMENTO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.COD_ITEM_2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PROVEEDOR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ALMACEN_DESTINO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CANTIDAD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOC_REF_1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOC_REF_2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOC_REF_3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOC_REF_4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOC_REF_5)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FECHA_TRANSACCION)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { codCia = item.COD_CIA, companiaVenta3 = item.COMPANIA_VENTA_3, almacenVenta = item.ALMACEN_VENTA, tipoMovimiento = item.TIPO_MOVIMIENTO, tipoDocumento = item.TIPO_DOCUMENTO, nroDocumento = item.NRO_DOCUMENTO, codItem2 = item.COD_ITEM_2 }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Detalle", "Details", new { codCia = item.COD_CIA, companiaVenta3 = item.COMPANIA_VENTA_3, almacenVenta = item.ALMACEN_VENTA, tipoMovimiento = item.TIPO_MOVIMIENTO, tipoDocumento = item.TIPO_DOCUMENTO, nroDocumento = item.NRO_DOCUMENTO, codItem2 = item.COD_ITEM_2 }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { codCia = item.COD_CIA, companiaVenta3 = item.COMPANIA_VENTA_3, almacenVenta = item.ALMACEN_VENTA, tipoMovimiento = item.TIPO_MOVIMIENTO, tipoDocumento = item.TIPO_DOCUMENTO, nroDocumento = item.NRO_DOCUMENTO, codItem2 = item.COD_ITEM_2 }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>